// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Post {
  id        String      @id @default(cuid())
  authorId  String
  content   String      @default("") @db.Text

  editedAt  DateTime?
  isEdited  Boolean     @default(false)

  media     PostMedia[] // carousel
  likes     PostLike[]
  comments  PostComment[]

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([authorId])
  @@index([createdAt])
}

enum MediaType {
  IMAGE
  VIDEO
}

model PostMedia {
  id           String    @id @default(cuid())
  postId       String
  type         MediaType
  url          String
  thumbnailUrl String?
  duration     Int?      // video only
  width        Int?
  height       Int?
  order        Int       // 0,1,2,...

  post         Post      @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, order])
  @@index([postId])
}

model PostLike {
  postId    String
  userId    String
  createdAt DateTime @default(now())

  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@id([postId, userId])  // ensures 1 like per user per post
  @@index([userId])       // helps "all likes by a user"
}

model PostComment {
  id        String   @id @default(cuid())
  postId    String
  authorId  String   // userId from User Service (no FK)
  content   String   @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId, createdAt])
  @@index([authorId])
}
